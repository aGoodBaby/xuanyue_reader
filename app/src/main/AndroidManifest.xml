<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fengdeyu.xuanyue_reader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.SearchResultActivity" />
        <activity android:name=".activity.BookIntroActivity" />
        <activity
            android:name=".activity.ReadActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity android:name=".other.ConnectTestActivity" />
        <activity
            android:name=".activity.ChapterContentActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".activity.GuideViewActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity android:name=".other.DownloadTestActivity"></activity>
    </application>

</manifest>