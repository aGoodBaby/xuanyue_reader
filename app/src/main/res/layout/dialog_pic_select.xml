<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="修改头像"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <View
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8"
        />

    <LinearLayout
        android:layout_width="228dp"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_pic_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/head_portrait_1"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/iv_pic_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/head_portrait_2"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            />
        <ImageView
            android:id="@+id/iv_pic_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/head_portrait_3"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:weightSum="2"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="#ffffff"
            android:onClick="onClickDialog"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#c8c8c8"
            />
        <Button
            android:id="@+id/btn_ok_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:background="#ffffff"
            android:onClick="onClickDialog"
            />



    </LinearLayout>


</LinearLayout>