<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fengdeyu.xuanyue_reader.activity.GuideViewActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/vp_guide"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_dot1"
            android:padding="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_dot_selected"
            />
        <ImageView
            android:id="@+id/iv_dot2"
            android:padding="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_dot_default"
            />
        <ImageView
            android:id="@+id/iv_dot3"
            android:padding="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_dot_default"
            />


    </LinearLayout>

</RelativeLayout>
